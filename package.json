{
  "name": "@codecompose/envi",
  "version": "1.0.0",
  "description": "Envi makes it easy to capture all env files from a codebase in a central location that can be version controlled, and restored for new checkouts and spawning git worktree instances.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "envi": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "pnpm build",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-types": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "env",
    "environment",
    "dotenv",
    "config",
    "cli",
    "tool"
  ],
  "author": "Thijs Koerselman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codecompose/envi.git"
  },
  "bugs": {
    "url": "https://github.com/codecompose/envi/issues"
  },
  "homepage": "https://envi.codecompose.dev",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@codecompose/typescript-config": "^2.2.0",
    "@types/node": "latest",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "latest",
    "oxlint": "latest",
    "prettier": "latest",
    "prettier-plugin-jsdoc": "^1.5.0",
    "tsdown": "latest",
    "typescript": "latest",
    "vitepress": "^1.6.4",
    "vitest": "latest"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@iarna/toml": "^2.2.5",
    "citty": "^0.1.6",
    "clipboardy": "^5.0.0",
    "consola": "^3.4.2",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "fast-xml-parser": "^5.3.0",
    "js-yaml": "^4.1.0",
    "maml.js": "^0.0.3"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc"
    ]
  }
}
